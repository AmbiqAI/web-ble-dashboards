    const characteristicUuid = '19690000-5001-1234-abcd-5678aabb1011';
    let audioContext;
    const audioDecoder = new AudioDecoder({output: decodeToQueue, error: onAudioError});

    let myCharacteristic;
    let myValue = 0;
    let myBLE;


